<ul class="posts_list">
  <%news.forEach(post => {%>
  <li class="posts_item">
    <div
      class="posts_preview-img"
      style="background-image: url(<%=post.image%>)"
    ></div>
    <div class="posts_data">
      <div class="posts_info">
        <h3 class="posts_catigory" style="color: <%= post.category.color %>">
          <a href="/newsCategory/<%-post.category.id%>">
            <%=post.category.name%></a
          >
        </h3>
        <div class="posts_author">
          <img
            src="<%= post.author.authorAvatar %>"
            alt=""
            class="author_avatar"
          />
          <div class="author_data">
            <span class="author_lastName"><%= post.author.lastName %></span>
            <span class="author_firstName"><%= post.author.firstName %></span>
          </div>
        </div>
      </div>

      <h2 class="posts_title">
        <%const title = post.title.substring(0, 100)%>
        <a href="/newPage/<%= post.id %>" class="posts_title-list"
          ><%=title%></a
        >
      </h2>
      <%const content = post.content.substring(0, 455)%>
      <p class="posts_text"><%-content%> ...</p>
    </div>
  </li>
  <%});%>
</ul>
